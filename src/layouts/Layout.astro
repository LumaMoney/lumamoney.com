---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="apple-itunes-app" content="app-id=6755104035" />
		
		<!-- SEO Meta Tags -->
		<meta name="description" content="Track expenses, manage accounts, and gain insights into your spending habits. All your data stays private on your device." />
		<meta name="keywords" content="personal finance, expense tracker, budget app, money management, financial tracking, iOS app" />
		<meta name="author" content="Luma Money" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://lumamoney.com/" />
		<meta property="og:title" content={title.includes('Luma Money') ? title : `${title} - Luma Money`} />
		<meta property="og:description" content="Track expenses, manage accounts, and gain insights into your spending habits. All your data stays private on your device." />
		<meta property="og:image" content="https://lumamoney.com/logo.png" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://lumamoney.com/" />
		<meta property="twitter:title" content={title.includes('Luma Money') ? title : `${title} - Luma Money`} />
		<meta property="twitter:description" content="Track expenses, manage accounts, and gain insights into your spending habits. All your data stays private on your device." />
		<meta property="twitter:image" content="https://lumamoney.com/logo.png" />
		
		<link rel="icon" type="image/png" href="/logo.png" />
		<link rel="apple-touch-icon" href="/logo.png" />
		<link rel="canonical" href={`https://lumamoney.com${Astro.url.pathname}`} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;500;700;800&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title.includes('Luma Money') ? title : `${title} - Luma Money`}</title>
		<script is:inline>
			// Set theme immediately to prevent flash
			const getTheme = () => {
				if (typeof localStorage !== 'undefined') {
					const saved = localStorage.getItem('theme');
					if (saved) return saved;
				}
				return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
			};
			if (getTheme() === 'dark') {
				document.documentElement.classList.add('dark');
			}
		</script>
	</head>
	<body class="min-h-screen flex flex-col bg-white dark:bg-zinc-950 text-zinc-900 dark:text-white transition-colors duration-200 antialiased">
		<nav class="bg-white/80 dark:bg-zinc-950/80 border-b border-gray-200 dark:border-zinc-800 sticky top-0 z-50 backdrop-blur-md">
			<div class="max-w-7xl mx-auto px-8 py-4 flex justify-between items-center">
				<a href="/" class="flex items-center gap-3 no-underline text-zinc-900 dark:text-white font-semibold text-xl transition-opacity hover:opacity-80">
					<img src="/LumaMoney.svg" alt="Luma Money" class="w-10 h-10" />
					<span class="max-sm:hidden">Luma Money</span>
				</a>
				<div class="flex items-center gap-2">
					<a href="/" class={`no-underline font-medium px-4 py-2 rounded-lg transition-all text-[15px] max-sm:px-3 max-sm:text-sm ${currentPath === '/' ? 'text-primary bg-gray-50 dark:bg-zinc-900' : 'text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-zinc-900'}`}>Home</a>
					<a href="/support" class={`no-underline font-medium px-4 py-2 rounded-lg transition-all text-[15px] max-sm:px-3 max-sm:text-sm ${currentPath === '/support' ? 'text-primary bg-gray-50 dark:bg-zinc-900' : 'text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-zinc-900'}`}>Support</a>
					<a href="/privacy" class={`no-underline font-medium px-4 py-2 rounded-lg transition-all text-[15px] max-sm:px-3 max-sm:text-sm ${currentPath === '/privacy' ? 'text-primary bg-gray-50 dark:bg-zinc-900' : 'text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-zinc-900'}`}>Privacy</a>
					<button id="theme-toggle" aria-label="Toggle theme" class="bg-gray-50 dark:bg-zinc-900 border border-gray-200 dark:border-zinc-800 rounded-lg w-9 h-9 cursor-pointer flex items-center justify-center transition-all text-zinc-600 dark:text-zinc-400 ml-2 hover:text-primary hover:border-primary">
						<svg class="hidden dark:block" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<circle cx="12" cy="12" r="5"></circle>
							<line x1="12" y1="1" x2="12" y2="3"></line>
							<line x1="12" y1="21" x2="12" y2="23"></line>
							<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
							<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
							<line x1="1" y1="12" x2="3" y2="12"></line>
							<line x1="21" y1="12" x2="23" y2="12"></line>
							<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
							<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
						</svg>
						<svg class="block dark:hidden" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
						</svg>
					</button>
				</div>
			</div>
		</nav>
		<main class="flex-1">
			<slot />
		</main>
		<footer class="bg-gray-50 dark:bg-zinc-900 border-t border-gray-200 dark:border-zinc-800 px-8 py-8 mt-16">
			<div class="max-w-7xl mx-auto text-center text-zinc-600 dark:text-zinc-400 text-[15px]">
				<p>&copy; {new Date().getFullYear()} Luma Money. All rights reserved.</p>
			</div>
		</footer>

		<script is:inline>
			document.getElementById('theme-toggle')?.addEventListener('click', () => {
				const html = document.documentElement;
				const isDark = html.classList.toggle('dark');
				localStorage.setItem('theme', isDark ? 'dark' : 'light');
			});
		</script>
	</body>
</html>
